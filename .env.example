# .env.example - Backend Environment Template
# Copy this file to .env.development or .env.production and configure
# =======================================================================

# Environment Configuration
NODE_ENV=development
STAGE=dev
REGION=ap-southeast-2

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
CORS_ORIGIN=*

# AWS Resources (Auto-generated by Serverless Framework)
# You don't need to set these manually, they are created during deployment
# USERS_TABLE=
# CASES_TABLE=
# FILES_TABLE=
# S3_BUCKET=

# Database Configuration (Optional - for local development)
# DYNAMODB_ENDPOINT=http://localhost:8000
# DYNAMODB_REGION=ap-southeast-2

# S3 Configuration (Optional - for local development)
# S3_ENDPOINT=http://localhost:9000
# S3_REGION=ap-southeast-2

# Debug & Logging
DEBUG_MODE=true
ENABLE_CONSOLE_LOGS=true
LOG_LEVEL=debug

# File Upload Limits
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/webp,image/gif,video/webm,video/mp4,video/quicktime
UPLOAD_TIMEOUT=600000

# Demo User (Development Only)
DEMO_USER_ENABLED=true
DEMO_USERNAME=demo.user@cellebrite.com
DEMO_PASSWORD=password

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Error Tracking (Optional)
SENTRY_DSN=
ERROR_TRACKING_ENABLED=false

# Monitoring
CLOUDWATCH_LOGS_ENABLED=true
XRAY_TRACING_ENABLED=false

# Performance (Production)
LAMBDA_WARMUP_ENABLED=false
CONNECTION_POOLING_ENABLED=false